<idea-plugin>
    <id>io.github.bigtows.plugin.magicdtobuilder.MagicDtoBuilder</id>
    <name>MagicDtoBuilder</name>
    <vendor url="https://github.com/BigTows/MagicDtoBuilder-plugin">MagicDtoBuilder GitHub OpenSource</vendor>

    <description><![CDATA[
        This allows you to simplify the routine work of writing DTO.
        Now you can simply describe the structure of the DTO, and this plugin has to take care of how to create and provide access to the fields of the class.
    ]]></description>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>


    <extensions defaultExtensionNs="com.intellij">

        <!-- Append magic method's for Builder DTO (set, get, has) !-->
        <completion.contributor language="PHP"
                                implementationClass="io.github.bigtows.plugin.magicdtobuilder.completion.MagicMethodCompletionContributor"/>
        <!-- Append magic method's for DTO (get, has) !-->
        <completion.contributor language="PHP"
                                implementationClass="io.github.bigtows.plugin.magicdtobuilder.completion.MagicMethodDtoCompletionContributor"/>

        <annotator language="PHP"
                   implementationClass="io.github.bigtows.plugin.magicdtobuilder.annotator.MagicMethodDtoBuilderAnnotator"
                   order="last"/>
        <projectService
                serviceImplementation="io.github.bigtows.plugin.magicdtobuilder.settings.MagicDtoBuilderSettings"/>

        <localInspection groupPath="MagicDtoBuilder" shortName="NotFoundDtoType"
                         displayName="Not found Dto Type in PHPDoc"
                         groupName="NotFoundDtoTypeInPhpDocParamTag"
                         enabledByDefault="true" level="WARNING"
                         language="PHP"
                         implementationClass="io.github.bigtows.plugin.magicdtobuilder.inspection.local.NotFoundDtoTypeInPhpDocParamTagLocalInspector"/>

        <localInspection groupPath="MagicDtoBuilder" shortName="InvalidDto"
                         displayName="Dto can be extended at AbstractDto"
                         groupName="InvalidDto"
                         enabledByDefault="true" level="WARNING"
                         language="PHP"
                         implementationClass="io.github.bigtows.plugin.magicdtobuilder.inspection.local.InvalidDtoLocalInspector"/>
    </extensions>

    <extensions defaultExtensionNs="com.jetbrains.php">
        <typeProvider3 implementation="io.github.bigtows.plugin.magicdtobuilder.providers.type.DtoBuilderTypeProvider"/>
        <referenceResolver
                implementation="io.github.bigtows.plugin.magicdtobuilder.resolver.reference.MagicMethodDtoBuilderReferenceResolver"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>